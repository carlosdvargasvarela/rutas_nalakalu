<div class="row justify-content-center">
  <div class="col-md-7 col-lg-6">
    <div class="card shadow-sm border-0 mt-4">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
          <i class="bi bi-person-plus-fill me-2"></i>
          Nuevo usuario
        </h4>
      </div>
      <div class="card-body">
        <%= simple_form_for @user do |f| %>
          <div class="mb-3">
            <%= f.input :name, label: "Nombre", input_html: { autofocus: true, class: "form-control" }, prepend: '<i class="bi bi-person-fill"></i>'.html_safe %>
          </div>
          <div class="mb-3">
            <%= f.input :email, label: "Correo electrÃ³nico", input_html: { class: "form-control" }, prepend: '<i class="bi bi-envelope-fill"></i>'.html_safe %>
          </div>
          <div class="mb-3">
            <%= f.input :role, collection: User.roles.keys.map { |r| [r.humanize, r] }, label: "Rol", include_blank: false, input_html: { class: "form-select" }, prepend: '<i class="bi bi-person-badge-fill"></i>'.html_safe %>
          </div>
          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Crear usuario", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>