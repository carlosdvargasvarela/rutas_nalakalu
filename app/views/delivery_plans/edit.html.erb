<h1 class="mb-4">
  <i class="bi bi-pencil-square me-2"></i>
  Editar orden de paradas - <span class="text-primary"><%= @delivery_plan.full_name %></span>
</h1>
<%= form_with model: @delivery_plan, local: true do |f| %>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="mb-3">
        <%= f.label :driver_id, "Conductor asignado", class: "form-label" %>
        <%= f.collection_select :driver_id, User.where(role: :driver), :id, :name, prompt: "Selecciona un conductor", class: "form-select" %>
      </div>
    </div>
  </div>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
      <div>
        <i class="bi bi-list-ol me-1"></i> Orden de paradas
      </div>
      <small class="text-muted">
        <i class="bi bi-arrows-move me-1"></i>
        Arrastra las filas para reordenar
      </small>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-sm table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 40px;"></th>
              <th style="width: 80px;"># Parada</th>
              <th>Pedido</th>
              <th>Cliente</th>
              <th>Dirección</th>
              <th>Fecha</th>
              <th style="width: 120px;">Acción</th>
            </tr>
          </thead>
          <tbody data-controller="sortable" 
                 data-sortable-target="list"
                 data-sortable-url-value="<%= update_order_delivery_plan_path(@delivery_plan) %>">
            <% @assignments.each do |assignment| %>
              <tr data-assignment-id="<%= assignment.id %>">
                <td class="text-center">
                  <div class="drag-handle" style="cursor: grab;">
                    <i class="bi bi-grip-vertical text-muted"></i>
                  </div>
                </td>
                <td class="text-center">
                  <span class="badge bg-primary stop-number"><%= assignment.stop_order || 0 %></span>
                </td>
                <td>
                  <%= link_to assignment.delivery.order.number, order_path(assignment.delivery.order), class: "text-decoration-none" %>
                </td>
                <td>
                  <i class="bi bi-person me-1"></i>
                  <%= assignment.delivery.order.client.name %>
                </td>
                <td>
                  <i class="bi bi-geo-alt me-1"></i>
                  <%= assignment.delivery.delivery_address.address %>
                </td>
                <td>
                  <i class="bi bi-calendar-event me-1"></i>
                  <%= l assignment.delivery.delivery_date, format: :short %>
                </td>
                <td>
                  <%= form_with url: delivery_plan_delivery_plan_assignment_path(@delivery_plan, assignment), method: :delete, local: true, class: "d-inline" do %>
                    <%= submit_tag "×", class: "btn btn-sm btn-outline-danger", title: "Remover entrega", data: { confirm: "¿Seguro que deseas remover esta entrega del plan?" } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-end gap-2">
    <%= submit_tag "Guardar cambios", class: "btn btn-primary" %>
    <%= link_to "Cancelar", delivery_plan_path(@delivery_plan), class: "btn btn-secondary" %>
  </div>
<% end %>
<% if @delivery_plan.draft? && @delivery_plan.driver.present? %>
  <div class="mt-3">
    <%= button_to "Enviar a logística", send_to_logistics_delivery_plan_path(@delivery_plan), method: :patch, class: "btn btn-success" %>
  </div>
<% end %>
<style>
  .sortable-ghost {
    opacity: 0.4;
    background: #f8f9fa;
  }

  .sortable-chosen {
    background: #e3f2fd;
  }

  .sortable-drag {
    background: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }

  .drag-handle:active {
    cursor: grabbing;
  }

  tbody tr:hover .drag-handle {
    color: #0d6efd !important;
  }
</style>