<!-- app/views/delivery_plans/edit.html.erb -->
<h1 class="mb-4">
  <i class="bi bi-pencil-square me-2"></i>
  Editar plan de ruta
  <span class="text-primary"><%= week_range_label(@delivery_plan.year, @delivery_plan.week, show_year: true) %></span>
</h1>
<div class="mb-3">
  <span class="badge <%= @delivery_plan.draft? ? 'bg-secondary' : 'bg-success' %>">
    <i class="bi bi-flag me-1"></i>
    <%= @delivery_plan.status.humanize %>
  </span>
  <span class="ms-3 text-muted">
    <i class="bi bi-truck me-1"></i>
    <%= @delivery_plan.driver&.name || "Sin conductor asignado" %>
  </span>
</div>
<!-- Form para editar el conductor -->
<%= simple_form_for @delivery_plan, local: true do |f| %>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <%= f.input :driver_id, 
                  label: "Conductor asignado", 
                  collection: User.where(role: :driver), 
                  value_method: :id, 
                  text_method: :name, 
                  prompt: "Selecciona un conductor",
                  input_html: { class: "form-select" },
                  label_html: { class: "form-label fw-bold" } %>
    </div>
  </div>
  <div class="d-flex justify-content-end gap-2 mb-4">
    <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
    <%= link_to "Cancelar", delivery_plan_path(@delivery_plan), class: "btn btn-secondary" %>
  </div>
<% end %>
<!-- Tabla de paradas (fuera del form principal) -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-light d-flex justify-content-between align-items-center">
    <div>
      <i class="bi bi-list-ol me-1"></i> Orden de paradas
    </div>
    <small class="text-muted">
      <i class="bi bi-arrows-move me-1"></i>
      Arrastra las filas para reordenar
    </small>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-sm table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th style="width: 40px;"></th>
            <th style="width: 80px;"># Parada</th>
            <th>Pedido</th>
            <th>Cliente</th>
            <th>Dirección</th>
            <th>Fecha</th>
            <th style="width: 120px;">Acción</th>
          </tr>
        </thead>
        <tbody data-controller="sortable" 
               data-sortable-target="list"
               data-sortable-url-value="<%= update_order_delivery_plan_path(@delivery_plan) %>">
          <% @assignments.each_with_index do |assignment, idx| %>
            <tr data-assignment-id="<%= assignment.id %>">
              <td class="text-center">
                <div class="drag-handle" style="cursor: grab;" title="Arrastrar para reordenar">
                  <i class="bi bi-grip-vertical text-muted"></i>
                </div>
              </td>
              <td class="text-center">
                <span class="badge bg-primary stop-number"><%= assignment.stop_order || (idx + 1) %></span>
              </td>
              <td>
                <%= link_to assignment.delivery.order.number, order_path(assignment.delivery.order), class: "text-decoration-none fw-bold" %>
              </td>
              <td>
                <i class="bi bi-person me-1"></i>
                <%= assignment.delivery.order.client.name %>
              </td>
              <td>
                <i class="bi bi-geo-alt me-1"></i>
                <%= assignment.delivery.delivery_address.address %>
              </td>
              <td>
                <span class="badge bg-info text-dark">
                  <i class="bi bi-calendar-event me-1"></i>
                  <%= l assignment.delivery.delivery_date, format: :short %>
                </span>
              </td>
              <td>
                <%= form_with url: delivery_plan_delivery_plan_assignment_path(@delivery_plan, assignment), method: :delete, local: true, class: "d-inline", data: { turbo: false } do %>
                  <button type="submit" class="btn btn-sm btn-outline-danger" title="Remover entrega" data-confirm="¿Seguro que deseas remover esta entrega del plan?">
                    <i class="bi bi-trash"></i>
                  </button>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @available_deliveries.any? %>
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: add_delivery_to_plan_delivery_plan_path(@delivery_plan), method: :patch, local: true do |f| %>
        <div class="row align-items-end">
          <div class="col-md-8">
            <%= f.label :delivery_id, "Agregar entrega al plan", class: "form-label" %>
            <%= f.collection_select :delivery_id, @available_deliveries, :id, 
                  ->(d) { "#{d.order.number} - #{d.order.client.name} (#{d.delivery_address.address})" }, 
                  prompt: "Selecciona una entrega", class: "form-select" %>
          </div>
          <div class="col-md-4">
            <%= f.submit "Agregar", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


<!-- Botón de enviar a logística -->
<% if @delivery_plan.draft? %>
  <div class="mt-4 d-flex align-items-center gap-3">
    <% if @delivery_plan.driver.present? %>
      <%= button_to "Enviar a logística", send_to_logistics_delivery_plan_path(@delivery_plan), method: :patch, class: "btn btn-success" %>
    <% else %>
      <span class="text-danger">
        <i class="bi bi-exclamation-triangle me-1"></i>
        Debes asignar un conductor antes de enviar a logística.
      </span>
    <% end %>
  </div>
<% end %>