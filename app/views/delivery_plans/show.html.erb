<h1>Detalle del Plan de Ruta #<%= @delivery_plan.id %></h1>

<div class="card mb-3">
  <div class="card-header">
    Información General
  </div>
  <div class="card-body">
    <p><strong>Semana:</strong> <%= @delivery_plan.week %></p>
    <p><strong>Año:</strong> <%= @delivery_plan.year %></p>
    <p><strong>Estado:</strong> <span class="badge bg-<%= delivery_status_color(@delivery_plan.status) %>"><%= @delivery_plan.status.humanize %></span></p>
    <%= link_to "Editar orden de paradas", edit_delivery_plan_path(@delivery_plan), class: "btn btn-outline-primary mb-3" %>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    Entregas en este plan
  </div>
  <div class="card-body">
    <% if @deliveries.any? %>
      <table>
        <thead>
          <tr>
            <th># Parada</th>
            <th>Pedido</th>
            <th>Cliente</th>
            <th>Dirección</th>
            <th>Fecha</th>
            <th>Estado</th>
          </tr>
        </thead>
        <tbody>
          <% @delivery_plan.delivery_plan_assignments.order(:stop_order).each do |assignment| %>
            <tr>
              <td><%= assignment.stop_order %></td>
              <td><%= assignment.delivery.order.number %></td>
              <td><%= assignment.delivery.order.client.name %></td>
              <td><%= assignment.delivery.delivery_address.address %></td>
              <td><%= l assignment.delivery.delivery_date, format: :long %></td>
              <td><span class="badge bg-<%= delivery_status_color(assignment.delivery.status) %>"><%= assignment.delivery.status.humanize %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No hay entregas asignadas a este plan.</p>
    <% end %>
  </div>
</div>

<%= link_to "Volver a Planes de Ruta", delivery_plans_path, class: "btn btn-secondary" %>