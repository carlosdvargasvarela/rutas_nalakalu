
<!-- Modal -->
<div class="modal fade" id="rescheduleModal<%= item.id %>" tabindex="-1" aria-labelledby="rescheduleModalLabel<%= item.id %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-warning-subtle">
        <h5 class="modal-title fw-semibold" id="rescheduleModalLabel<%= item.id %>">
          <i class="bi bi-calendar2-plus me-2"></i> Reagendar producto
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <!-- Seguimos usando simple_form_for para el objeto, pero los campos custom van con *_tag -->
        <%= simple_form_for item, url: reschedule_delivery_item_path(item), method: :patch, local: true do |f| %>
          <div class="mb-3">
            <label class="form-label fw-semibold">¿Cómo deseas reagendar?</label><br>
            <div class="form-check form-check-inline">
              <%= radio_button_tag "new_delivery", "true", true,
                    id: "new_delivery_true_#{item.id}",
                    class: "form-check-input",
                    data: { toggle_fields: item.id } %>
              <%= label_tag "new_delivery_true_#{item.id}", "Crear nueva entrega", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= radio_button_tag "new_delivery", "false", false,
                    id: "new_delivery_false_#{item.id}",
                    class: "form-check-input",
                    data: { toggle_fields: item.id } %>
              <%= label_tag "new_delivery_false_#{item.id}", "Agregar a entrega existente", class: "form-check-label" %>
            </div>
          </div>
          <!-- Campos para nueva entrega (fecha libre para cualquier rol) -->
          <div id="new-date-fields-<%= item.id %>">
            <label class="form-label">Nueva fecha de entrega</label>
            <%= date_field_tag "new_date", nil, class: "form-control" %>
          </div>
          <!-- Campos para agregar a entrega existente -->
          <div id="existing-delivery-fields-<%= item.id %>" class="d-none mt-3">
            <label class="form-label">Entrega existente</label>
            <%= select_tag "target_delivery_id",
                  options_for_select([["Selecciona una entrega existente", ""]] +
                    future_deliveries.map { |d| ["Entrega ##{d.id} - #{l d.delivery_date, format: :long}", d.id] }),
                  class: "form-select" %>
            <% if future_deliveries.empty? %>
              <small class="text-muted">No hay entregas existentes</small>
            <% end %>
          </div>
          <div class="text-end mt-3">
            <%= f.button :submit, "Guardar cambios", class: "btn btn-warning" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>