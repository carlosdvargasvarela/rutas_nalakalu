<div class="card">
  <div class="card-body">
    <%= simple_form_for(@client) do |f| %>
      <div class="row g-3">
        <div class="col-md-6">
          <%= f.input :name, label: "Nombre", required: true, input_html: { autofocus: true } %>
        </div>
        <div class="col-md-3">
          <%= f.input :phone, label: "TelÃ©fono" %>
        </div>
        <div class="col-md-3">
          <%= f.input :email, label: "Correo", as: :email %>
        </div>
      </div>
      <div class="mt-3 d-flex gap-2">
        <%= f.submit (@client.new_record? ? "Crear" : "Guardar cambios"), class: "btn btn-primary" %>
        <%= link_to "Cancelar", (@client.new_record? ? clients_path : client_path(@client)), class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>