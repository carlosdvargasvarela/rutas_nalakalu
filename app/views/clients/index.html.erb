<!-- app/views/clients/index.html.erb -->
<div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Clientes</h3>
  <div class="d-flex gap-2">
    <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filters">
      <i class="bi bi-funnel"></i> Filtros
    </button>
    <% if policy(Client).create? %>
      <%= link_to raw('<i class="bi bi-plus-lg"></i> Nuevo'), new_client_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div id="filters" class="collapse mb-3">
  <div class="card">
    <div class="card-body">
      <%= search_form_for @q, url: clients_path, method: :get, builder: SimpleForm::FormBuilder, html: { class: "row g-2" } do |f| %>
        <div class="col-md-4">
          <%= f.input :name_cont, label: "Nombre contiene", input_html: { placeholder: "Ej. María Pérez" } %>
        </div>
        <div class="col-md-4">
          <%= f.input :email_cont, label: "Correo contiene", input_html: { placeholder: "usuario@empresa.com" } %>
        </div>
        <div class="col-md-4">
          <%= f.input :phone_cont, label: "Teléfono contiene", input_html: { placeholder: "8xx-xxxx" } %>
        </div>
        <div class="col-12 d-flex gap-2">
          <%= f.submit "Aplicar filtros", class: "btn btn-outline-primary" %>
          <%= link_to "Limpiar", clients_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover table-sm align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th><%= sort_link(@q, :name, "Nombre") %></th>
          <th>Teléfono</th>
          <th>Correo</th>
          <th><%= sort_link(@q, :created_at, "Creado") %></th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @clients.any? %>
          <% @clients.each do |client| %>
            <tr>
              <td class="fw-semibold"><%= link_to client.name, client_path(client), class: "link-primary link-underline-opacity-0" %></td>
              <td><%= client.phone.presence || "-" %></td>
              <td><%= client.email.presence || "-" %></td>
              <td><%= l(client.created_at, format: :short) %></td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to raw('<i class="bi bi-eye"></i>'), client_path(client), class: "btn btn-outline-primary", title: "Ver" %>
                  <% if policy(client).update? %>
                    <%= link_to raw('<i class="bi bi-pencil"></i>'), edit_client_path(client), class: "btn btn-outline-secondary", title: "Editar" %>
                  <% end %>
                  <% if policy(client).destroy? %>
                    <%= link_to raw('<i class="bi bi-trash"></i>'), client_path(client),
                        data: { turbo_method: :delete, turbo_confirm: "¿Eliminar este cliente?" },
                        class: "btn btn-outline-danger", title: "Eliminar" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5">
              <div class="p-4 text-center text-muted">
                <i class="bi bi-people fs-3 d-block mb-2"></i>
                No hay clientes que coincidan con los filtros.
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer bg-white">
    <div class="d-flex justify-content-center m-0">
      <%= paginate @clients %>
    </div>
  </div>
</div>