<% if notice %>
  <div class="alert alert-success alert-dismissible fade show text-white">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show text-white">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% end %>