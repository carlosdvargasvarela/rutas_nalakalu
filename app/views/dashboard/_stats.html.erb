<div class="row g-4">
  <div class="col-lg-8">
    <div class="card shadow-sm border-0 rounded-3 h-100">
      <div class="card-header bg-info text-white fw-semibold">
        <i class="bi bi-graph-up me-2"></i> Progreso semanal de entregas
      </div>
      <div class="card-body">
        <%= line_chart @deliveries_per_day, height: "260px" %>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="card shadow-sm border-0 rounded-3 h-100">
      <div class="card-header bg-secondary text-white fw-semibold">
        <i class="bi bi-pie-chart me-2"></i> Pedidos por estado
      </div>
      <div class="card-body">
        <%= pie_chart @orders_per_status.transform_keys { |k| Order.human_enum_name(:status, k) }, height: "220px" %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow-sm border-0 rounded-3 h-100">
      <div class="card-header bg-success text-white fw-semibold">
        <i class="bi bi-person-lines-fill me-2"></i> Pedidos activos por vendedor
      </div>
      <div class="card-body">
        <%= column_chart @orders_per_seller, height: "250px" %>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card shadow-sm border-0 rounded-3 h-100">
      <div class="card-header bg-warning fw-semibold">
        <i class="bi bi-truck me-2"></i> Entregas por chofer
      </div>
      <div class="card-body">
        <%= bar_chart @deliveries_per_driver, height: "250px" %>
      </div>
    </div>
  </div>
</div>