<!-- app/views/dashboard/_progress_chart.html.erb -->
<div class="card shadow-sm border-0">
  <div class="card-header bg-info text-white">
    <h5 class="mb-0">
      <i class="bi bi-graph-up me-2"></i>
      Progreso semanal
    </h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <!-- Aquí puedes integrar Chart.js o Chartkick -->
        <div class="progress-chart-placeholder bg-light rounded p-4 text-center">
          <i class="bi bi-bar-chart fs-1 text-muted mb-2"></i>
          <p class="text-muted">Gráfico de progreso semanal</p>
          <small class="text-muted">Entregas completadas vs programadas</small>
        </div>
      </div>
      <div class="col-md-4">
        <div class="progress-stats">
          <div class="stat-item mb-3">
            <h6 class="text-muted mb-1">Esta semana</h6>
            <p class="fs-4 fw-bold text-success mb-0">85%</p>
            <small class="text-muted">17 de 20 entregas</small>
          </div>
          <div class="stat-item mb-3">
            <h6 class="text-muted mb-1">Promedio mensual</h6>
            <p class="fs-4 fw-bold text-info mb-0">92%</p>
            <small class="text-muted">Últimos 30 días</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>