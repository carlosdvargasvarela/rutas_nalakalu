<!-- app/views/dashboard/_stats.html.erb -->
<div class="row g-4">
  <div class="col-12 col-lg-8">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0">
          <i class="bi bi-graph-up me-2"></i>
          Progreso semanal de entregas
        </h5>
      </div>
      <div class="card-body">
        <%= line_chart @deliveries_per_day, height: "250px", library: {title: {display: false}} %>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-4">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-secondary text-white">
        <h6 class="mb-0">
          <i class="bi bi-pie-chart me-2"></i>
          Pedidos por estado
        </h6>
      </div>
      <div class="card-body">
        <%= pie_chart @orders_per_status.transform_keys { |k| Order.human_enum_name(:status, k) }, height: "200px" %>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-6">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">
          <i class="bi bi-person-lines-fill me-2"></i>
          Pedidos activos por vendedor
        </h5>
      </div>
      <div class="card-body">
        <%= column_chart @orders_per_seller, height: "250px", library: {title: {display: false}} %>
      </div>
    </div>
  </div>
  <div class="col-12 col-lg-6">
    <div class="card shadow-sm border-0 h-100">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">
          <i class="bi bi-truck me-2"></i>
          Entregas asignadas por chofer
        </h5>
      </div>
      <div class="card-body">
        <%= bar_chart @deliveries_per_driver, height: "250px", library: {title: {display: false}} %>
      </div>
    </div>
  </div>
</div>