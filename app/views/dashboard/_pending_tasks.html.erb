<!-- app/views/dashboard/_pending_tasks.html.erb -->
<div class="card shadow-sm border-0 h-100">
  <div class="card-header bg-success text-white">
    <h5 class="mb-0">
      <i class="bi bi-list-check me-2"></i>
      Tareas pendientes
    </h5>
  </div>
  <div class="card-body">
    <% if tasks.present? %>
      <% tasks.each do |task| %>
        <div class="task-item d-flex align-items-center mb-3 p-2 rounded bg-light">
          <div class="task-icon me-3">
            <i class="<%= task[:icon] %> text-<%= task[:color] %>"></i>
          </div>
          <div class="flex-grow-1">
            <p class="mb-1 fw-medium"><%= task[:title] %></p>
            <small class="text-muted"><%= task[:description] %></small>
          </div>
          <div class="task-action">
            <%= link_to task[:action_text], task[:action_url], class: "btn btn-sm btn-outline-#{task[:color]}" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center text-muted py-4">
        <i class="bi bi-check-circle fs-3 mb-2 d-block text-success"></i>
        Â¡Excelente! No tienes tareas pendientes
      </div>
    <% end %>
  </div>
</div>