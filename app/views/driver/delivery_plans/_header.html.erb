<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
  <h4 class="mb-0">
    <i class="bi bi-map me-2 text-primary"></i>
    <%= week_range_label(@delivery_plan.year, @delivery_plan.week, show_year: true) %>
  </h4>
  
  <div class="d-flex gap-2">
    <%= link_to delivery_plan_path(@delivery_plan, format: :pdf),
          class: "btn btn-outline-danger btn-sm",
          download: "Hoja_Ruta_#{@delivery_plan.delivery_date&.strftime('%d_%m_%Y')}.pdf" do %>
      <i class="bi bi-filetype-pdf"></i> PDF
    <% end %>
  </div>
</div>