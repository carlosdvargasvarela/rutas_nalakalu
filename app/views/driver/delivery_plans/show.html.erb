<% content_for :title, "Mi ruta" %>
<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="mb-0">
    <i class="bi bi-truck text-primary me-2"></i>
    Ruta del <%= @plan.first_delivery_date&.strftime("%d/%m/%Y") %>
  </h2>
  <div id="driver_progress_counter" class="small text-muted">
    Completadas: <%= @completed_count %>/<%= @assignments.size %>
  </div>
</div>
<div class="row g-2">
  <% @plan.delivery_plan_assignments.order(:stop_order).each do |assignment| %>
    <%= render "assignment", assignment: assignment %>
  <% end %>
</div>
<div id="driver_scroll_anchor"></div>