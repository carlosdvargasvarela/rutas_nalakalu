<% driver = @delivery_plan.driver %>

<div class="card shadow-sm">
  <div class="card-header bg-light d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <i class="bi bi-people-fill me-2"></i>
      <strong>Tripulación</strong>
    </div>
  </div>

  <div class="card-body">
    <div class="mb-2">
      <strong><i class="bi bi-person-badge me-1"></i>Conductor:</strong>
      <% if driver.present? %>
        <span><%= driver.name %></span>
      <% else %>
        <span class="text-muted">Sin asignar</span>
      <% end %>
    </div>

    <% if driver.present? && driver.crew_members.any? %>
      <div>
        <strong><i class="bi bi-people me-1"></i>Equipo:</strong>
        <ul class="list-unstyled mb-0 mt-1 small">
          <% driver.crew_members.each do |cm| %>
            <li class="d-flex justify-content-between align-items-center py-1">
              <span><i class="bi bi-person me-1"></i><%= cm.name %></span>
              <span class="badge bg-light text-dark">
                <i class="bi bi-card-text me-1"></i><%= cm.id_number %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-muted small">Sin tripulación registrada</div>
    <% end %>
  </div>
</div>