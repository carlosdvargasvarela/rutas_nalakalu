<!-- app/views/sellers/show.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><%= @seller.name %> <span class="badge text-bg-primary"><%= @seller.seller_code %></span></h3>
  <%= link_to "Volver", sellers_path, class: "btn btn-secondary" %>
</div>

<div class="card mb-3">
  <div class="card-body d-flex flex-wrap gap-4 align-items-center">
    <div>
      <div class="text-muted">Usuario asignado</div>
      <div class="fw-semibold"><%= @seller.user&.email || "-" %></div>
    </div>
    <div>
      <div class="text-muted">Creado</div>
      <div><%= l(@seller.created_at, format: :short) %></div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">Pedidos recientes</div>
  <div class="card-body p-0">
    <% if @orders.any? %>
      <div class="table-responsive">
        <table class="table table-sm align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Número</th>
              <th>Cliente</th>
              <th>Estado</th>
              <th>Fecha</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order.number, order_path(order), class: "link-primary" %></td>
                <td><%= order.client.name %></td>
                <td>
                  <% badge_class = (order.status.to_s == 'delivered' ? 'text-bg-success' : 'text-bg-secondary') %>
                  <span class="badge <%= badge_class %>"><%= order.status.humanize %></span>
                </td>
                <td><%= l(order.created_at, format: :short) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="p-2 d-flex justify-content-center">
        <%= paginate @orders, param_name: :orders_page %>
      </div>
    <% else %>
      <div class="p-4 text-center text-muted">
        <i class="bi bi-box-seam fs-3 d-block mb-2"></i>
        Este vendedor no tiene pedidos aún.
      </div>
    <% end %>
  </div>
</div>