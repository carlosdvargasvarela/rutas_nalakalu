<!-- app/views/sellers/index.html.erb -->
<div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Vendedores</h3>
  <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filters">
    <i class="bi bi-funnel"></i> Filtros
  </button>
</div>

<div id="filters" class="collapse mb-3">
  <div class="card">
    <div class="card-body">
      <%= search_form_for @q, url: sellers_path, method: :get, builder: SimpleForm::FormBuilder, html: { class: "row g-2" } do |f| %>
        <div class="col-md-4">
          <%= f.input :name_cont, label: "Nombre contiene" %>
        </div>
        <div class="col-md-4">
          <%= f.input :seller_code_cont, label: "Código contiene" %>
        </div>
        <div class="col-md-4">
          <%= f.input :user_email_cont, label: "Correo del usuario" %>
        </div>
        <div class="col-12 d-flex gap-2">
          <%= f.submit "Aplicar filtros", class: "btn btn-outline-primary" %>
          <%= link_to "Limpiar", sellers_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="card">
  <div class="table-responsive">
    <table class="table table-hover table-sm align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th><%= sort_link(@q, :name, "Nombre") %></th>
          <th>Código</th>
          <th>Usuario</th>
          <th><%= sort_link(@q, :created_at, "Creado") %></th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @sellers.any? %>
          <% @sellers.each do |seller| %>
            <tr>
              <td class="fw-semibold"><%= link_to seller.name, seller_path(seller), class: "link-primary link-underline-opacity-0" %></td>
              <td><span class="badge text-bg-primary"><%= seller.seller_code %></span></td>
              <td><%= seller.user&.email %></td>
              <td><%= l(seller.created_at, format: :short) %></td>
              <td class="text-end">
                <%= link_to raw('<i class="bi bi-eye"></i> Ver'), seller_path(seller), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5">
              <div class="p-4 text-center text-muted">
                <i class="bi bi-person-badge fs-3 d-block mb-2"></i>
                No hay vendedores que mostrar.
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer bg-white">
    <div class="d-flex justify-content-center m-0">
      <%= paginate @sellers %>
    </div>
  </div>
</div>