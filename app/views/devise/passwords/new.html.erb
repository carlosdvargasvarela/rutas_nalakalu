<!-- app/views/devise/passwords/new.html.erb -->
<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm border-0 mt-5">
      <div class="card-header bg-info text-white text-center">
        <h4 class="mb-0">
          <i class="bi bi-envelope-arrow-up me-2"></i>
          Recuperar contraseña
        </h4>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.input :email, required: true, autofocus: true, input_html: { class: "form-control" }, prepend: '<i class="bi bi-envelope-fill"></i>'.html_safe, label: "Correo electrónico" %>
          </div>
          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Enviar instrucciones", class: "btn btn-info" %>
          </div>
        <% end %>
        <div class="mt-3 text-center">
          <%= link_to "Volver al inicio de sesión", new_session_path(resource_name), class: "small" %>
        </div>
      </div>
    </div>
  </div>
</div>