<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-sm border-0 mt-5">
      <div class="card-header bg-info text-white text-center">
        <h4 class="mb-0">
          <i class="bi bi-key-fill me-2"></i>
          Establecer nueva contrase単a
        </h4>
      </div>
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.input :reset_password_token, as: :hidden, input_html: { value: params[:reset_password_token] } %>
          <div class="mb-3">
            <%= f.input :password, required: true, input_html: { class: "form-control" }, prepend: '<i class="bi bi-lock-fill"></i>'.html_safe, label: "Nueva contrase単a" %>
          </div>
          <div class="mb-3">
            <%= f.input :password_confirmation, required: true, input_html: { class: "form-control" }, prepend: '<i class="bi bi-lock-fill"></i>'.html_safe, label: "Confirmar contrase単a" %>
          </div>
          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Guardar contrase単a", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>