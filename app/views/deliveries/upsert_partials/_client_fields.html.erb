<div class="card shadow-sm mb-4" data-delivery-form-target="clientCard">
  <div class="card-header bg-primary text-white d-flex align-items-center">
    <i class="bi bi-person-fill me-2"></i>
    <h5 class="mb-0">Cliente</h5>
  </div>
  <div class="card-body">
    <!-- Tabs para seleccionar cliente existente o crear nuevo -->
    <ul class="nav nav-tabs mb-3" id="clientTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active"
                id="existing-client-tab"
                data-bs-toggle="tab"
                data-bs-target="#existing-client"
                type="button"
                role="tab"
                aria-controls="existing-client"
                aria-selected="true">
          <i class="bi bi-person-check me-1"></i> Cliente existente
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link"
                id="new-client-tab"
                data-bs-toggle="tab"
                data-bs-target="#new-client"
                type="button"
                role="tab"
                aria-controls="new-client"
                aria-selected="false">
          <i class="bi bi-person-plus me-1"></i> Nuevo cliente
        </button>
      </li>
    </ul>
    <div class="tab-content" id="clientTabContent">
      <!-- Tab: Cliente existente -->
      <div class="tab-pane fade show active"
           id="existing-client"
           role="tabpanel"
           aria-labelledby="existing-client-tab">
        <div class="mb-3">
          <label for="client_id" class="form-label fw-bold">
            <i class="bi bi-search me-1"></i> Buscar cliente
          </label>
          <%= select_tag :client_id,
                options_from_collection_for_select(
                  clients,
                  :id,
                  :name,
                  params[:client_id] || f.object.order&.client_id
                ),
                include_blank: "Selecciona un cliente",
                class: "form-select",
                data: {
                  controller: "tom-select",
                  "delivery-form-target": "clientSelect",
                  action: "change->delivery-form#clientChanged change->delivery-form#validateClient"
                } %>
          <div class="form-text">
            <i class="bi bi-info-circle me-1"></i>
            Selecciona un cliente existente de la lista.
          </div>
        </div>
      </div>
      <!-- Tab: Nuevo cliente -->
      <div class="tab-pane fade"
           id="new-client"
           role="tabpanel"
           aria-labelledby="new-client-tab">
        <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
          <i class="bi bi-info-circle-fill me-2"></i>
          <div>
            Completa los datos para crear un nuevo cliente.
          </div>
        </div>
        <div class="mb-3">
          <label for="client_name" class="form-label fw-bold">
            <i class="bi bi-person me-1"></i> Nombre del cliente *
          </label>
          <%= text_field_tag "client[name]",
                params.dig(:client, :name),
                placeholder: "Ej: Juan Pérez",
                class: "form-control",
                data: {
                  "delivery-form-target": "newClientName",
                  action: "input->delivery-form#validateClient"
                } %>
        </div>
        <div class="mb-3">
          <label for="client_phone" class="form-label fw-bold">
            <i class="bi bi-telephone me-1"></i> Teléfono *
          </label>
          <%= text_field_tag "client[phone]",
                params.dig(:client, :phone),
                placeholder: "Ej: 8888-8888",
                class: "form-control",
                data: {
                  "delivery-form-target": "newClientPhone",
                  action: "input->delivery-form#validateClient"
                } %>
        </div>
        <div class="mb-3">
          <label for="client_email" class="form-label fw-bold">
            <i class="bi bi-envelope me-1"></i> Email
          </label>
          <%= text_field_tag "client[email]",
                params.dig(:client, :email),
                placeholder: "Ej: cliente@ejemplo.com",
                class: "form-control",
                data: { "delivery-form-target": "newClientEmail" } %>
          <div class="form-text">
            <i class="bi bi-info-circle me-1"></i>
            Opcional.
          </div>
        </div>
      </div>
    </div>
    <!-- Indicador de validación -->
    <div class="mt-3"
         data-delivery-form-target="clientValidation"
         style="display: none;">
      <div class="alert alert-danger d-flex align-items-center mb-0" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div data-delivery-form-target="clientValidationMessage"></div>
      </div>
    </div>
  </div>
</div>