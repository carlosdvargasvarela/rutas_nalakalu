<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
  <div class="card-header bg-gradient text-white py-3" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
    <div class="d-flex align-items-center">
      <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
        <i class="bi bi-check-circle-fill fs-5"></i>
      </div>
      <div>
        <h5 class="mb-0 fw-bold">Confirmación</h5>
        <small class="opacity-75">Revise todos los datos antes de guardar</small>
      </div>
    </div>
  </div>
  <div class="card-body p-4">
    <!-- Mensaje informativo -->
    <div class="alert alert-info border-0 shadow-sm rounded-3 mb-4">
      <div class="d-flex align-items-center">
        <i class="bi bi-info-circle-fill me-3 fs-4"></i>
        <div>
          <strong class="d-block mb-1">Verificación final</strong>
          <span class="small">Asegúrese de que toda la información es correcta antes de guardar la entrega.</span>
        </div>
      </div>
    </div>
    
    <div class="row g-4">
      <!-- Cliente -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100" style="border-left: 4px solid #667eea !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-person-fill text-primary fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-primary">Cliente</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryClient">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Pedido -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100" style="border-left: 4px solid #f093fb !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-danger bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-receipt-cutoff text-danger fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-danger">Pedido</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryOrder">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Dirección -->
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3" style="border-left: 4px solid #4facfe !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-info bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-geo-alt-fill text-info fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-info">Dirección de entrega</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryAddress">
              <span class="text-muted">No definida</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Mapa (si hay dirección) -->
      <div class="col-12" data-delivery-wizard-target="summaryMapContainer" style="display:none;">
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
          <div id="summaryMap" data-delivery-wizard-target="summaryMap" style="height: 350px; width: 100%;"></div>
        </div>
      </div>
      
      <!-- Fecha de entrega -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100" style="border-left: 4px solid #fa709a !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-warning bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-calendar-event-fill text-warning fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-warning">Fecha de entrega</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryDate">
              <span class="text-muted">No definida</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Contacto -->
      <div class="col-md-6">
        <div class="card border-0 shadow-sm rounded-3 h-100" style="border-left: 4px solid #30cfd0 !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-success bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-telephone-fill text-success fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-success">Contacto</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryContact">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Productos -->
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3" style="border-left: 4px solid #11998e !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-dark bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-box-seam-fill text-dark fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-dark">Productos a entregar</h6>
            </div>
            <div data-delivery-wizard-target="summaryItems" class="fw-semibold">
              <span class="text-muted">Sin productos</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Notas (si existen) -->
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3" style="border-left: 4px solid #a8edea !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-secondary bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-chat-left-text-fill text-secondary fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-secondary">Notas adicionales</h6>
            </div>
            <p class="mb-0" data-delivery-wizard-target="summaryNotes">
              <span class="text-muted fst-italic">Sin notas</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Alert de confirmación final -->
    <div class="alert alert-success border-0 shadow-sm rounded-3 mt-4 mb-0">
      <div class="d-flex align-items-center">
        <i class="bi bi-check-circle-fill me-3 fs-3"></i>
        <div>
          <strong class="d-block mb-1">¡Todo listo para guardar!</strong>
          <span class="small">Presiona "Guardar entrega" para completar el proceso.</span>
        </div>
      </div>
    </div>
  </div>
</div>