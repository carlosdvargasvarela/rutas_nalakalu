<div class="card border-0 rounded-4 overflow-hidden" style="box-shadow: 0 2px 12px rgba(61, 52, 44, 0.08);">
  <div class="card-header py-4" style="background-color: #E2D2B9;">
    <div class="d-flex align-items-center">
      <div class="rounded-circle p-2 me-3" style="background-color: rgba(137, 152, 123, 0.15);">
        <i class="bi bi-check-circle fs-5" style="color: #89987B;"></i>
      </div>
      <div>
        <h5 class="mb-1 fw-normal" style="font-family: 'Fraunces', serif; font-weight: 300; color: #3D342C;">Confirmación</h5>
      </div>
    </div>
  </div>
  <div class="card-body p-4">
    <!-- Mensaje informativo -->
    <div class="alert border-0 rounded-3 mb-4" style="background-color: rgba(196, 157, 144, 0.12); box-shadow: 0 1px 8px rgba(61, 52, 44, 0.06);">
      <div class="d-flex align-items-center">
        <i class="bi bi-info-circle me-3 fs-4" style="color: #C49D90;"></i>
        <div>
          <strong class="d-block mb-1" style="color: #3D342C;">Verificación final</strong>
          <span class="small" style="color: #3D342C; opacity: 0.8;">Asegúrese de que toda la información es correcta antes de guardar la entrega.</span>
        </div>
      </div>
    </div>
    
    <div class="row g-4">
      <!-- Cliente -->
      <div class="col-md-6">
        <div class="card border-0 rounded-3 h-100" style="background-color: rgba(226, 210, 185, 0.15); border-left: 3px solid #89987B !important; box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle p-2 me-3" style="background-color: rgba(137, 152, 123, 0.15);">
                <i class="bi bi-person fs-5" style="color: #3D342C;"></i>
              </div>
              <h6 class="mb-0 fw-bold" style="color: #3D342C;">Cliente</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryClient" style="color: #3D342C;">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Pedido -->
      <div class="col-md-6">
        <div class="card border-0 rounded-3 h-100" style="background-color: rgba(196, 157, 144, 0.12); border-left: 3px solid #C49D90 !important; box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle p-2 me-3" style="background-color: rgba(196, 157, 144, 0.15);">
                <i class="bi bi-receipt-cutoff fs-5" style="color: #3D342C;"></i>
              </div>
              <h6 class="mb-0 fw-bold" style="color: #3D342C;">Pedido</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryOrder" style="color: #3D342C;">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Dirección -->
      <div class="col-12">
        <div class="card border-0 rounded-3" style="background-color: rgba(226, 210, 185, 0.15); border-left: 3px solid #89987B !important; box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle p-2 me-3" style="background-color: rgba(137, 152, 123, 0.15);">
                <i class="bi bi-geo-alt fs-5" style="color: #3D342C;"></i>
              </div>
              <h6 class="mb-0 fw-bold" style="color: #3D342C;">Dirección de entrega</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryAddress" style="color: #3D342C;">
              <span class="text-muted">No definida</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Mapa (si hay dirección) -->
      <div class="col-12" data-delivery-wizard-target="summaryMapContainer" style="display:none;">
        <div class="card border-0 rounded-3 overflow-hidden" style="box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div id="summaryMap" data-delivery-wizard-target="summaryMap" style="height: 350px; width: 100%;"></div>
        </div>
      </div>
      
      <!-- Fecha de entrega -->
      <div class="col-md-6">
        <div class="card border-0 rounded-3 h-100" style="background-color: rgba(196, 157, 144, 0.12); border-left: 3px solid #C49D90 !important; box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle p-2 me-3" style="background-color: rgba(165, 78, 30, 0.12);">
                <i class="bi bi-calendar-event fs-5" style="color: #A54E1E;"></i>
              </div>
              <h6 class="mb-0 fw-bold" style="color: #3D342C;">Fecha de entrega</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryDate" style="color: #3D342C;">
              <span class="text-muted">No definida</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Contacto -->
      <div class="col-md-6">
        <div class="card border-0 rounded-3 h-100" style="background-color: rgba(226, 210, 185, 0.15); border-left: 3px solid #89987B !important; box-shadow: 0 2px 8px rgba(61, 52, 44, 0.06);">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="rounded-circle p-2 me-3" style="background-color: rgba(137, 152, 123, 0.15);">
                <i class="bi bi-telephone fs-5" style="color: #3D342C;"></i>
              </div>
              <h6 class="mb-0 fw-bold" style="color: #3D342C;">Contacto</h6>
            </div>
            <p class="mb-0 fw-semibold" data-delivery-wizard-target="summaryContact" style="color: #3D342C;">
              <span class="text-muted">No definido</span>
            </p>
          </div>
        </div>
      </div>
      
      <!-- Productos -->
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3" style="border-left: 4px solid #11998e !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-dark bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-box-seam-fill text-dark fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-dark">Productos a entregar</h6>
            </div>
            <div data-delivery-wizard-target="summaryItems" class="fw-semibold">
              <span class="text-muted">Sin productos</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Notas (si existen) -->
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3" style="border-left: 4px solid #a8edea !important;">
          <div class="card-body p-4">
            <div class="d-flex align-items-center mb-3">
              <div class="bg-secondary bg-opacity-10 rounded-circle p-2 me-3">
                <i class="bi bi-chat-left-text-fill text-secondary fs-5"></i>
              </div>
              <h6 class="mb-0 fw-bold text-secondary">Notas adicionales</h6>
            </div>
            <p class="mb-0" data-delivery-wizard-target="summaryNotes">
              <span class="text-muted fst-italic">Sin notas</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Alert de confirmación final -->
    <div class="alert alert-success border-0 shadow-sm rounded-3 mt-4 mb-0">
      <div class="d-flex align-items-center">
        <i class="bi bi-check-circle-fill me-3 fs-3"></i>
        <div>
          <strong class="d-block mb-1">¡Todo listo para guardar!</strong>
          <span class="small">Presiona "Guardar entrega" para completar el proceso.</span>
        </div>
      </div>
    </div>
  </div>
</div>