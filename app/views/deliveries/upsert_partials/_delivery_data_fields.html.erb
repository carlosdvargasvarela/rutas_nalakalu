<div class="card border-0 shadow-sm mb-4 rounded-4 overflow-hidden">
  <div class="card-header bg-gradient text-white py-3" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
    <div class="d-flex align-items-center">
      <div class="bg-white bg-opacity-25 rounded-circle p-2 me-3">
        <i class="bi bi-calendar-event-fill fs-5"></i>
      </div>
      <div>
        <h5 class="mb-0 fw-bold">Datos de entrega</h5>
        <small class="opacity-75">Configure la fecha y detalles de la entrega</small>
      </div>
    </div>
  </div>
  <div class="card-body p-4">
    <div class="row g-4">
      <% unless (current_user.seller? || current_user.production_manager?) && !delivery.new_record? %>
        <div class="col-md-4">
          <%= f.label :delivery_date, "Fecha de servicio", class: "form-label" %>
          <%= f.date_field :delivery_date, 
              class: "form-control", 
              required: true,
              data: { action: "change->delivery-form#validateDeliveryData" } %>
        </div>
      <% end %>
      <div class="col-md-4">
        <%= f.input :contact_name, 
            label: "Contacto",
            input_html: { data: { action: "input->delivery-form#validateDeliveryData" } } %>
      </div>
      <div class="col-md-4">
        <%= f.input :contact_phone, 
            label: "Teléfono",
            input_html: { data: { action: "input->delivery-form#validateDeliveryData" } } %>
      </div>
      <div class="col-12">
        <%= f.input :delivery_notes, 
            as: :text, 
            label: "Notas", 
            input_html: { rows: 2 } %>
      </div>
      <div class="col-md-6">
        <%= f.label :delivery_time_preference, "Preferencia de horario", class: "form-label" %>
        <%= f.select :delivery_time_preference,
            [["Mañana", "Mañana"], ["Tarde", "Tarde"], ["Indiferente", "Indiferente"]],
            { prompt: "Seleccione horario" },
            class: "form-select",
            data: { action: "change->delivery-form#validateDeliveryData" } %>
      </div>
    </div>
  </div>
</div>