<div class="card shadow-sm mb-4">
  <div class="card-header bg-light">
    <i class="bi bi-calendar-event me-2 text-primary"></i><strong>Datos de entrega</strong>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <% unless (current_user.seller? || current_user.production_manager?) && !delivery.new_record? %>
        <div class="col-md-4">
          <%= f.label :delivery_date, "Fecha de servicio", class: "form-label" %>
          <%= f.date_field :delivery_date, 
              class: "form-control", 
              required: true,
              data: { action: "change->delivery-form#validateDeliveryData" } %>
        </div>
      <% end %>
      <div class="col-md-4">
        <%= f.input :contact_name, 
            label: "Contacto",
            input_html: { data: { action: "input->delivery-form#validateDeliveryData" } } %>
      </div>
      <div class="col-md-4">
        <%= f.input :contact_phone, 
            label: "Teléfono",
            input_html: { data: { action: "input->delivery-form#validateDeliveryData" } } %>
      </div>
      <div class="col-12">
        <%= f.input :delivery_notes, 
            as: :text, 
            label: "Notas", 
            input_html: { rows: 2 } %>
      </div>
      <div class="col-md-6">
        <%= f.label :delivery_time_preference, "Preferencia de horario", class: "form-label" %>
        <%= f.select :delivery_time_preference,
            [["Mañana", "Mañana"], ["Tarde", "Tarde"], ["Indiferente", "Indiferente"]],
            { prompt: "Seleccione horario" },
            class: "form-select",
            data: { action: "change->delivery-form#validateDeliveryData" } %>
      </div>
    </div>
  </div>
</div>