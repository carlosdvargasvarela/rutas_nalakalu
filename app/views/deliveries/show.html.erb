<h1>Detalles de Entrega #<%= @delivery.id %></h1>

<div class="card mb-3">
  <div class="card-header">
    Información General
  </div>
  <div class="card-body">
    <p><strong>Fecha de Entrega:</strong> <%= l @delivery.delivery_date, format: :long %></p>
    <p><strong>Estado:</strong> 
      <span class="badge bg-<%= delivery_status_color(@delivery.status) %>">
        <%= @delivery.status.humanize %>
      </span>
    </p>
    <p><strong>Preferencia de Hora:</strong> <%= @delivery.delivery_time_preference.presence || 'No especificado' %></p>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    Información del Pedido
  </div>
  <div class="card-body">
    <p><strong>Número de Pedido:</strong> <%= @delivery.order.number %></p>
    <p><strong>Cliente:</strong> <%= @delivery.order.client.name %></p>
    <p><strong>Vendedor:</strong> <%= @delivery.order.seller.name %> (<%= @delivery.order.seller.seller_code %>)</p>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header">
    Detalles de Entrega
  </div>
  <div class="card-body">
    <p><strong>Dirección:</strong> <%= @delivery.delivery_address.address %></p>
    <p><strong>Contacto:</strong> <%= @delivery.contact_name %></p>
    <p><strong>Teléfono Contacto:</strong> <%= @delivery.contact_phone.presence || 'No especificado' %></p>
  </div>
</div>

<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span>Productos en esta Entrega</span>
    <% if @delivery.scheduled? %>
      <%= button_to "Marcar Entrega Completa", mark_as_delivered_delivery_path(@delivery), 
              method: :patch, class: "btn btn-success btn-sm",
              data: { turbo_confirm: "¿Está seguro de marcar toda la entrega como completada?" } %>
    <% end %>
  </div>
  <div class="card-body">
    <% if @delivery.delivery_items.any? %>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Observaciones</th>
            <th>Caso Servicio</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @delivery.delivery_items.each do |item| %>
            <tr>
              <td><%= item.order_item.product %></td>
              <td><%= item.quantity_delivered %></td>
              <td><%= item.order_item.notes.presence || 'N/A' %></td>
              <td>
                <% if item.service_case? %>
                  <span class="badge bg-warning">Sí</span>
                <% else %>
                  <span class="badge bg-secondary">No</span>
                <% end %>
              </td>
              <td>
                <span class="badge bg-<%= delivery_item_status_color(item.status) %>">
                  <%= item.status.humanize %>
                </span>
              </td>
              <td>
                <% case item.status %>
                <% when 'pending' %>
                  <%= button_to "Confirmar", confirm_delivery_item_path(item), 
                                method: :patch, class: "btn btn-primary btn-sm" %>
                <% when 'confirmed' %>
                  <%= button_to "Entregar", mark_delivered_delivery_item_path(item), 
                                method: :patch, class: "btn btn-success btn-sm" %>
                  <%= button_to "Reprogramar", reschedule_delivery_item_path(item), 
                                method: :patch, class: "btn btn-warning btn-sm" %>
                <% when 'delivered' %>
                  <span class="text-success">✓ Entregado</span>
                <% else %>
                  <%= button_to "Cancelar", cancel_delivery_item_path(item), 
                                method: :patch, class: "btn btn-danger btn-sm",
                                confirm: "¿Está seguro?" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No hay productos asociados a esta entrega.</p>
    <% end %>
  </div>
</div>

<%= link_to "Volver a Entregas", deliveries_path, class: "btn btn-secondary" %>