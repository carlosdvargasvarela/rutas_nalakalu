<div class="delivery-show-header d-flex justify-content-between align-items-center">
  <h1>
    <i class="bi bi-truck me-2"></i>
    Entrega <span class="text-primary">#<%= delivery.id %></span>
    <span class="ms-2 badge bg-<%= delivery_status_color(delivery.status) %>">
      <%= delivery.display_status %>
    </span>
  </h1>
  <% if policy(delivery).edit? %>
    <%= link_to edit_delivery_path(delivery), class: "btn btn-sm btn-outline-secondary", title: "Editar" do %>
      <i class="bi bi-pencil-square"></i> Editar
    <% end %>
  <% end %>
</div>