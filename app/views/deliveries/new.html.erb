<%# app/views/deliveries/new.html.erb %>
<%= render "shared/flash_errors", objects: [@client, @order, @delivery, @address] %>

<div class="deliveries-new-page">
  <div class="container-fluid px-4">
    <!-- Header con diseño Na Lakalú -->
    <div class="delivery-new-header">
      <div class="d-flex align-items-center">
        <div class="icon-container me-4">
          <i class="bi bi-truck"></i>
        </div>
        <div>
          <h1>Nueva entrega</h1>
          <p class="subtitle">Complete el siguiente formulario para crear una nueva entrega</p>
        </div>
      </div>
    </div>

    <!-- Formulario con diseño artesanal -->
    <div class="delivery-form-card">
      <%= render "deliveries/upsert_partials/form", delivery: @delivery, clients: @clients, addresses: @addresses %>
    </div>
  </div>
</div>