<!-- app/views/deliveries/_products_section.html.erb -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5><i class="bi bi-boxes"></i> Productos a Entregar</h5>
    <button type="button" class="btn btn-sm btn-outline-primary" 
            data-action="click->delivery-form#addDeliveryItem">
      <i class="bi bi-plus"></i> Agregar Producto
    </button>
  </div>
  <div class="card-body">
    <div id="delivery-items-container">
      <%= f.simple_fields_for :delivery_items do |di| %>
        <%= render 'deliveries/partials/delivery_item', di: di %>
      <% end %>
    </div>
    <%= render 'deliveries/partials/new_delivery_item_template' %>
  </div>
</div>