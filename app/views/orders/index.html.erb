<h1>Listado de Pedidos</h1>

<% if @orders.any? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Número de Pedido</th>
        <th>Cliente</th>
        <th>Vendedor</th>
        <th>Estado</th>
        <th>Fecha Creación</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.number %></td>
          <td><%= order.client.name %></td>
          <td><%= order.seller.name %> (<%= order.seller.seller_code %>)</td>
          <td><%= order.status.humanize %></td>
          <td><%= link_to "Ver Detalles", order_path(order), class: "btn btn-sm btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @orders %>
<% else %>
  <p>No hay pedidos para mostrar.</p>
<% end %>
