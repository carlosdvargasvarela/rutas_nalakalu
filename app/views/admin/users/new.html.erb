<div class="row justify-content-center">
  <div class="col-md-7 col-lg-6">
    <div class="card shadow-sm border-0 mt-4">
      <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
          <i class="bi bi-person-plus-fill me-2"></i>
          Nuevo usuario
        </h4>
      </div>
      <div class="card-body">
        <%= simple_form_for [:admin, @user], html: { data: { controller: "user-role" } } do |f| %>
          <div class="mb-3 input-group">
            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
            <%= f.input :name, label: false, placeholder: "Nombre", input_html: { autofocus: true, class: "form-control" } %>
          </div>
          <div class="mb-3 input-group">
            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
            <%= f.input :email, label: false, placeholder: "Correo electrónico", input_html: { class: "form-control" } %>
          </div>
          <div class="mb-3 input-group">
            <span class="input-group-text"><i class="bi bi-person-badge-fill"></i></span>
            <%= f.input :role,
                        collection: User.roles.keys.map { |r| [r.humanize, r] },
                        label: false,
                        include_blank: false,
                        input_html: {
                          class: "form-select",
                          data: { 
                            user_role_target: "roleSelect",
                            action: "change->user-role#toggleSellerCode"
                          }
                        } %>
          </div>
          <div class="mb-3 input-group" data-user-role-target="sellerCodeField" style="display: none;">
            <span class="input-group-text"><i class="bi bi-hash"></i></span>
            <%= f.input :seller_code, label: false, placeholder: "Código de vendedor", input_html: { class: "form-control" } %>
          </div>
          <div class="form-check form-switch mb-3">
            <%= f.check_box :send_notifications, class: "form-check-input", id: "sendNotificationsSwitch" %>
            <%= f.label :send_notifications, "Recibir notificaciones por correo", class: "form-check-label" %>
          </div>
          <div class="d-flex justify-content-end">
            <%= f.button :submit, "Crear usuario", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>